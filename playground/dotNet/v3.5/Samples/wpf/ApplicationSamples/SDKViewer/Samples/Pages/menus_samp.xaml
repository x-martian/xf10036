			mib1 = new MenuItem();
			mib1.Header = "Recently Opened";
			mib.Items.Add(mib1);
			mib1a = new MenuItem();
			mib1a.Header = "Text.xaml";
			mib1.Items.Add(mib1a);
			cv2.Children.Add(menu);
		}

	}
