  Name    ="_3f8884f4_7e1f_456b_be06_fbd3cf469bf3"
  Tag     ="Manipulate a Table's Columns through the Columns Property"
  xmlns:cc="clr-namespace:Microsoft.Windows.SdkViewer.Controls;assembly=SdkViewer"
