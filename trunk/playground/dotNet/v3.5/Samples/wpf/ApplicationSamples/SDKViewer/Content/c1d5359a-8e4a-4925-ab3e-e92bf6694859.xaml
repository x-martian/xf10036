        <TableRow>
          <TableCell>
            <Paragraph xml:space="preserve" TextAlignment="Left" FontSize="8pt" FontFamily="Courier New"><Run>
&lt;SolidColorBrush x:Key="DisabledForegroundBrush" Color="#888" /> </Run>

            </Paragraph>

          </TableCell>

        </TableRow>

