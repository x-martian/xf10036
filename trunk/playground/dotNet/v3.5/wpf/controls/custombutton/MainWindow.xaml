<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="CustomButton.MainWindow"
	x:Name="Window"
	Title="MainWindow"
	Width="640" Height="480" Background="Black">

	<Grid x:Name="LayoutRoot">
		<Button HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="160" Height="40" Content="Button">
			<Button.Background>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<LinearGradientBrush.RelativeTransform>
						<TransformGroup>
							<ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="6.038" ScaleY="2.652"/>
							<SkewTransform AngleX="0" AngleY="0" CenterX="0.5" CenterY="0.5"/>
							<RotateTransform Angle="0" CenterX="0.5" CenterY="0.5"/>
							<TranslateTransform X="2.519" Y="0.826"/>
						</TransformGroup>
					</LinearGradientBrush.RelativeTransform>
					<GradientStop Color="White" Offset="0"/>
					<GradientStop Color="#FFF0F0EA" Offset="0.9"/>
				</LinearGradientBrush>
			</Button.Background>
		</Button>
	</Grid>
</Window>