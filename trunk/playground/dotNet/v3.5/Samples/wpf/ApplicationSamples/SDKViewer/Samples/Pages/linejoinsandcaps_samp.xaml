                                        <GradientStop Color="#CCCCFF" Offset="0" />
                                        <GradientStop Color="AliceBlue" Offset="1" />
                                    </GradientStopCollection>
                                </GradientBrush.GradientStops>
                            </LinearGradientBrush>
                        </Border.Background>
